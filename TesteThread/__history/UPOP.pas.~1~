unit UPOP;

interface

uses windows,classes,StdCtrls;

type
ThreadPOP = class(TThread)
private
FServeur,FUser,FPass: string;
FPort : Integer ;
Fedit : Tedit;
Fig : integer;
protected
constructor Create(CreateSuspended: Boolean;serveur:string;port:integer;user:string;pass:string;Edit:Tedit;ig:integer);
procedure Execute; override;
procedure VaChercher;
end;


implementation

constructor ThreadPOP.Create(CreateSuspended: Boolean;serveur:string;port:integer;user:string;pass:string;Edit:Tedit;ig:integer);
begin
inherited Create(CreateSuspended);
FreeOnTerminate := True;
Priority := tplower;
FServeur := serveur ;
FUser := user ;
FPass := pass ;
FPort := port ;
Fedit := edit ;
Fig   := ig ;
if CreateSuspended then
Resume;
end;



procedure ThreadPOP.Execute;
begin
synchronize(VaChercher);
end;

procedure ThreadPOP.VaChercher;
begin
Fedit.Text:=fserveur;
end;







end.
